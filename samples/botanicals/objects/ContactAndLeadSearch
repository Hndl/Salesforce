public class ContactAndLeadSearch {
    
    public static Account makeAccount (string nme, Integer n  ) { 
        Account acct = new Account(
    		Name=nme,
    		Phone='(415)555-121'+n,
    		NumberOfEmployees=1,
    		BillingCity='San Francisco');
			insert acct;
        return acct;
    }
    
    public static Contact makeContact(String fName, String lName, String depart, Account acc) { 
    	Contact con = new Contact(FirstName=fName,LastName=lName,Phone=acc.Phone,Department=depart,AccountId=acc.Id);
		insert con;
        return (con);
    }
    
    public static Lead makeLead (String name, String t, Account acc) { 

    	Lead led = new Lead(LastName=name,Title=t,Phone=acc.Phone, Company=acc.Name);
		insert led;
        return ( led);
    }
    
    public static void makeDataItem () {
		Account acc = ContactAndLeadSearch.makeAccount('BottleIT',1);
        Contact con = ContactAndLeadSearch.makeContact('Clive', 'Smith', 'IT', acc);
        Lead led = ContactAndLeadSearch.makeLead('Smith','CTO',acc);
    }
    
    public static List<List<SObject>> searchContactsAndLeads ( String searchTerm ) {
        
        
        if ( String.isEmpty(searchTerm)) {
            return ((List<List<sObject>>)null);
        }
        
        List<List<sObject>> searchResults = [FIND :searchTerm 
                                             IN ALL FIELDS
                                             RETURNING Contact(FirstName,LastName,Department), Lead(Name)];
        
        
	    
        return (searchResults);
    }
}
