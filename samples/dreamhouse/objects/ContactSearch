public class ContactSearch {
    public static List<Contact> searchForContacts( String strlastName , String strMailingPostcode) {
        List<Contact> lstSearchResults = new List<Contact>();
        final String FUNC = 'ContactSearch.searchForContacts::';
        
        try{
            
            lstSearchResults = [SELECT Id, 
                                	   Name
								FROM Contact 
								WHERE LastName = :strlastName
								AND MailingPostalCode = :strMailingPostcode];
                
        } catch ( DmlException ex ) {
            System.debug(FUNC + ' - ' + strLastName + ' , ' + strMailingPostcode + ' -ex: '  + ex.getStackTraceString());
        }
        
        return (lstSearchResults);
    }
}
