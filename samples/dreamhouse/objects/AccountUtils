public class AccountUtils {
    public static List<Account> accountsByState ( String billingStateAbbreviation ) {
        List<Account> searchResults = null;
        
        if (String.isEmpty(billingStateAbbreviation)){
            	return ( searchResults );
        }
                
        try{                    
        	searchResults = [SELECT Id,Name 
            	             FROM Account
                	         WHERE BillingState = :billingStateAbbreviation];
            
        }catch (DmlException ex ) {
        	System.debug(ex.getMessage());
        }
            
        return (searchResults);
    }
}
