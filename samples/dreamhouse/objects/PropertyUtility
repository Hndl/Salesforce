public class PropertyUtility {
 static double period = 30;
 //PropertyUtility.newListedProperties();
 public static void newListedProperties(){
     	
        List<Property__c> newPropList = [SELECT Name, Days_On_Market__c, Broker__r.Email__c FROM Property__c WHERE Days_On_Market__c <= :PropertyUtility.period];
                
        for (Property__c prop : newPropList){
            String propEmail  = prop.Name + ':' + prop.Broker__r.Email__c ;           
            system.debug(propEmail);
        }
    }
}
